<div class="container">
  <div>
   <div>

      <h2>商品一覧</h2>
      <div class="items">
        <% @items.each do |item| %>
          <div class="item-box">
            <%= link_to public_item_path(item) do %>
              <%= attachment_image_tag item, :image, format: "jpeg", width:"200", height:"120", fallback: "no_image.jpg" %>
            <% end %>
            <h5><%= link_to item.name, public_item_path(item) %></h5>
            <p><span>¥</span><%= item.price.to_s(:delimited) %>（税抜）</p>
          </div>
        <% end %>
      </div>
    </div>
    <div>
      <%= paginate @items %>
    </div>
  </div>
</div>
