<div>
  <div>
    <h3>マイページ</h3>
    <div>
      <span>登録情報</span>
      <%= link_to '編集する', edit_public_customer_path(@customer.id), class: "btn btn-primary" %>
      <%= link_to 'パスワードを変更する', edit_customer_registration_path, class: "btn btn-primary" %>
    </div>
    <div>
      <table>
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
          </tr>
          <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div>
  <div>
    <table>
      <thead>
        <tr>
          <td><h3>配送先</h3></td>
          <td><%= link_to '一覧を見る',  public_addresses_path(@customer.id), class: "btn btn-primary" %> </td>
        </tr>
        <tr>
        <td><h3>注文履歴</h3></td>
        <td><%= link_to '一覧を見る', public_orders_path(@customer.id), class: "btn btn-primary" %></td>
        </tr>
      </thead>
    </table>
  </div>
</div>