<div class="shipping-contents">
  <div class="shipping-container">
    <div id="error_explanation">
      <% if @shipping.errors.any? %>
        <h3><%= @shipping.errors.count %>件のエラーが発生しました</h3>
        <ul>
          <% @shipping.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="sh-form shipping-new">
      <h1>配送先登録／一覧</h1>
      <%= render partial: 'new', locals: { customer: @customer, shipping: @shipping, submit: "登録する", color: "btn-success" } %>
    </div>
    <div class = "shipping-index-table">
      <table class="sh-tb">
        <thead>
          <tr class="sh-tr">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @customer.addresses.each do |shipping| %>
            <tr class="sh-tr">
              <td><%= addresses.postal_code.to_s.insert(3, "-") %></td>
              <td><%= addresses.address %></td>
              <td><%= addresses.receiver %></td>
              <td>
                <%= link_to '編集する', edit_customer_address_path(address.customer,address), class: "btn btn-primary" %>
                <%= link_to '削除する', customer_address_path(address.customer,address), method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>