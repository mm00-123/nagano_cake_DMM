<div class="container col-xs-8 col-xs-offset-3">
  <div class="row">
    <h3>新規会員登録</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      <table>
        <tbody>
          <tr>
            <th>名前</th>
            <td class="sign-up-small-cell">(姓)</td>
            <td><%= f.text_field :last_name, autofocus: true %></td>
            <td class="sign-up-small-cell">(名)</td>
            <td><%= f.text_field :first_name, autofocus: true %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td class="sign-up-small-cell">(セイ)</td>
            <td><%= f.text_field :last_name_kana, autofocus: true %></td>
            <td class="sign-up-small-cell">(メイ)</td>
            <td><%= f.text_field :first_name_kana, autofocus: true %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email"%></td>
          </tr>
          <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td class="sign-up-small-cell"></td>
          <td><%= f.text_field :postal_code, autofocus: true %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td class="sign-up-small-cell"></td>
            <td colspan="3"><%= f.text_field :address, autofocus: true, class: "sign-up-address" %></td>
          </tr>
          <tr>
            <th>電話番号（ハイフンなし）</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.text_field :telephone_number, autofocus: true %></td>
          </tr>
          <tr>
            <th>パスワード（６文字以上）</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.password_field :password %></td>
          </tr>
          <tr>
            <th>パスワード（確認用）</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
        </tbody>
      </table>
      <br>
      <br>
      <div class="customer-sign-up-actions">
        <%= f.submit "新規登録", class:"btn btn-success col-xs-3 col-xs-offset-3" %>
      </div>
    <% end %>
  </div>
</div>
<div class="container col-xs-6 col-xs-offset-2 sign-up-message">
  <div class="row">
    <h3>既に登録済みの方</h3>
    <span class="col-xs-offset-"><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</span>
  </div>
</div>
