<div class="container">
  <div class="row">
    <h2>会員一覧</h2>
  </div>
</div>
<div class="container col-xs-6 col-xs-offset-3">
  <div class="row">
    <table class="table col-xs-8">
      <thead>
        <tr>
          <td>会員ID</td>
          <td>氏名</td>
          <td>メールアドレス</td>
          <td>ステータス</td>
        </tr>
      </thead>
        <% @customers.each do |customer| %>
          <tbody>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer) do %>
                  <%= customer.last_name %>
                  <%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <% if customer.is_active == "t" %>
              <td>有効</td>
              <% else %>
              <td>退会済</td>
              <% end %>
            </tr>
          </tbody>
        <% end %>
      </table>
  </div>
</div>

<div class="container col-xs-8 col-xs-offset-5">
  <div class="row">
    <%= paginate @customers %>
  </div>
</div>