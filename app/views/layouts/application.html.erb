<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>

  <% if admin_signed_in? %>

      <div class="container">

          <div class="header-right row col-xs-offset-3 col-xs-12">
            <%= link_to '商品一覧', admin_items_path, class: "btn btn-primary" %>
            <%= link_to '会員一覧', admin_customers_path, class: "btn btn-primary" %>
            <%= link_to '注文履歴一覧', admin_orders_path, class: "btn btn-primary" %>
            <%= link_to 'ジャンル一覧', admin_genres_path, class: "btn btn-primary" %>
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "btn btn-primary" %>

          </div>
      </div>
      <% elsif customer_signed_in? %>

      <div class="container">
          <div class="header-right row col-xs-offset-5">
            <%= link_to 'マイページ', public_customer_path(current_customer.id), class: "btn btn-primary head-nav-item" %>
            <%= link_to '商品一覧', public_items_path, class: "btn btn-primary" %>
            <%= link_to 'カート', public_cart_items_path(current_customer.id), class: "btn btn-primary" %>
            <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: "btn btn-primary" %>
          </div>
      </div>
      <% else %>

      <div class="container">

          <div class="header-right row col-xs-offset-5">
          <%= link_to 'About', about_path, class: "btn btn-primary" %>
          <%= link_to '商品一覧', public_items_path, class: "btn btn-primary" %>
          <%= link_to '新規登録', new_customer_registration_path, class: "btn btn-primary" %>
          <%= link_to 'ログイン', new_customer_session_path, class: "btn btn-primary" %>
        </div>
      </div>
  <% end %>


  </header>

  <body>
    <div class="main">
       <%= yield %>
    </div>
  </body>

  <footer>
    <small>©︎DMM WEBCAMP</small>
  </footer>
</html>
